root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space

[*.py]
indent_style = space
indent_size = 4

[*.js]
indent_style = space
indent_size = 4

[*.{html,jinja}]
indent_style = space
indent_size = 2

[*.{css,sass,less,scss}]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 4
